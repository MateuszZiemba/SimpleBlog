@model IList<SimpleBlog.Core.BusinessObjects.Post>

<div class="sidebar">
    <h3>Latest posts</h3>

    @if (Model.Count > 0)
    {
        <ul>
            @foreach (var post in Model)
            {
                <li>@Html.PostLink(post)</li>
            }
        </ul>
    }
    else
    {
        <p>No posts found!</p>
    }
</div>
