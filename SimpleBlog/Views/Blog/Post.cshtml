@model SimpleBlog.Core.BusinessObjects.Post

@{
    ViewBag.Title = Model.Title;
}

<div id="content">
    <div class="post">
        <div class="post-meta">
            <div class="row">

                <div class="post-title">
                    <h1>@Html.PostLink(Model)</h1>
                </div>

            </div>
            <div class="row">

                <div class="post-category">
                    <span>Category:</span> @Html.CategoryLink(Model.Category)
                </div>

                <div class="post-tags">
                    <span>Tags:</span> @Helpers.Tags(Html, Model.Tags)
                </div>

                <div class="no-of-comments">
                    <a href="@string.Format("{0}#disqus_thread", Model.Href(Url))"></a>
                </div>

                <div class="posted-date">
                    @Model.PublishedOn
                    @*.ToConfigLocalTime()*@
                </div>

            </div>
        </div>

        <div class="post-body">
            @Html.Raw(Model.Description)
        </div>
        @Html.Partial("_Disqus")
        <script id="dsq-count-scr" src="//mziemba.disqus.com/count.js" async></script>
    </div>
</div>